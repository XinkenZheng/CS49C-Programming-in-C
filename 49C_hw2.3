//program to compute the possible sum of two dice
#include<stdio.h>
#include<stdlib.h>
#include<time.h>
#define SIZE 13

int main(void) {
 int frequency[SIZE] = {0};

 srand(time(NULL));

//roll dice for 36000 times.
 for(int roll = 1; roll <=36000; ++roll)
 {
   size_t dice1 = 1 + rand()%6; 
   size_t dice2 = 1 + rand()%6;
   size_t result = dice1 + dice2;
   ++frequency[result];
 }

//print header
 printf("%s%17s\n", "Face", "Frequency");

//print result in tublar format
 for(size_t result =2; result < SIZE; ++result)
  printf("%4lu%17d\n", result, frequency[result]);

}


